{
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "importOrder": [
        "^(react|next?/?([a-zA-Z/]*))$",
        "^@/components/ui/(.*)$",
        "^@/components/(.*)$",
        "^@/lib/(.*)$",
        "^@/utils/(.*)$",
        "^@/hooks/(.*)$",
        "^@/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": [
        "@trivago/prettier-plugin-sort-imports",
        "prettier-plugin-tailwindcss"
    ]
}
